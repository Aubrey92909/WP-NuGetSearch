<Application x:Class="NuGetSearch.WinRT.App" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:NuGetSearch.WinRT" RequestedTheme="Light">
    <Application.Resources>
        <vm:ViewModelLocator x:Key="Locator" xmlns:vm="using:NuGetSearch.WinRT.ViewModel" />
        <Style TargetType="CommandBar">
            <Setter Property="Background" Value="#0072BC" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe WP" />
            <Setter Property="FontWeight" Value="SemiLight" />
        </Style>
        
    </Application.Resources>
</Application>